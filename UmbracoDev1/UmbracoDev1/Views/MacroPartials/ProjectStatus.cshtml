@inherits Umbraco.Web.Macros.PartialViewMacroPage
var selectionProjects = Model.Content.Site().FirstChild("ProjectMain").Children()
                                    .Where(x => x.IsVisible())
                                    .Where(x => x.GetPropertyValue<String>("status") == "Completed");

 foreach (var child in selectionProjects)
                  {

           <li> <a href="@ProjectItem">
                @child.Name: @child.GetPropertyValue("status")</a> 
        </li>
		
	    }	
